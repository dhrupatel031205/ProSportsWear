<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.HomeActivity">

    <!-- Logo (Top-Left) -->
    <ImageView
        android:id="@+id/app_logo"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="16dp"
        android:contentDescription="App Logo"
        android:src="@drawable/logo1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Home Title -->

    <!-- Logout Button -->

    <TextView
        android:id="@+id/home_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Home"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@id/logoutBtn"
        app:layout_constraintHorizontal_bias="0.19"
        app:layout_constraintStart_toEndOf="@id/app_logo"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/logoutBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Logout"
        android:textSize="14sp"
        android:textColor="@android:color/white"
        android:backgroundTint="@android:color/holo_red_light"
        android:padding="8dp"
        android:elevation="4dp"
        android:layout_margin="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Welcome Message -->
    <TextView
        android:id="@+id/welcome_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to ProSportWear!"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        android:padding="20dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/app_logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp" />

    <!-- Items Section -->
    <LinearLayout
        android:id="@+id/items_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/welcome_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Title + Explore More -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <TextView
                android:id="@+id/items_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Our Items"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_alignParentStart="true" />

            <TextView
                android:id="@+id/explore_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Explore More >"
                android:textColor="@android:color/holo_blue_dark"
                android:textSize="14sp"
                android:textStyle="bold"
                android:padding="8dp"
                android:clickable="true"
                android:focusable="true"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>

        <!-- Items Grid -->
        <GridLayout
            android:id="@+id/items_grid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="2"
            android:orientation="horizontal"
            android:padding="8dp">

            <ImageView
                android:id="@+id/item1"
                android:layout_width="170dp"
                android:layout_height="150dp"
                android:layout_margin="4dp"
                android:layout_columnSpan="1"
                android:layout_gravity="fill"
                android:scaleType="centerCrop"
                android:src="@drawable/shorts" />

            <ImageView
                android:id="@+id/item2"
                android:layout_width="20dp"
                android:layout_height="150dp"
                android:layout_margin="4dp"
                android:layout_columnSpan="1"
                android:layout_gravity="fill"
                android:scaleType="centerCrop"
                android:src="@drawable/shoe" />

            <ImageView
                android:id="@+id/item3"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_margin="4dp"
                android:layout_columnSpan="1"
                android:layout_gravity="fill"
                android:scaleType="centerCrop"
                android:src="@drawable/foot" />

            <ImageView
                android:id="@+id/item4"
                android:layout_width="0dp"
                android:layout_height="148dp"
                android:layout_columnSpan="1"
                android:layout_gravity="fill"
                android:layout_margin="4dp"
                android:scaleType="centerCrop"
                android:src="@drawable/football" />
        </GridLayout>
    </LinearLayout>

    <!-- Bottom Navigation (Missing buttons added) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="bottom"
        app:layout_constraintBottom_toBottomOf="parent">

        <Button
            android:id="@+id/home_button"
            android:layout_width="wrap_content"
            android:layout_height="65dp"
            android:text="Home"
            android:backgroundTint="@color/blue"
            android:layout_weight="1" />

        <Button
            android:id="@+id/store_button"
            android:layout_width="wrap_content"
            android:layout_height="65dp"
            android:backgroundTint="@color/blue"
            android:text="Store"
            android:layout_weight="1" />

        <Button
            android:id="@+id/cart_button"
            android:layout_width="wrap_content"
            android:layout_height="65dp"
            android:text="Cart"
            android:backgroundTint="@color/blue"
            android:layout_weight="1" />

        <Button
            android:id="@+id/profile_button"
            android:layout_width="wrap_content"
            android:layout_height="65dp"
            android:backgroundTint="@color/blue"
            android:text="Profile"
            android:layout_weight="1" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
